# ----------- 1. Build stage -----------
FROM node:18-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build


# ----------- 2. Run stage -----------
FROM nginx:alpine

# Copiar build est√°tico de Vite al servidor web
COPY --from=builder /app/dist /usr/share/nginx/html

# Configurar nginx
COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
